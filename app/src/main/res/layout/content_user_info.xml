<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.aspirephile.parlayultimatum.UserInfoActivity"
    tools:showIn="@layout/activity_user_info">

    <ImageView
        android:id="@+id/imageViewUserImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/contact" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/user_first_name" />

    <EditText
        android:id="@+id/editTextFname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageViewUserImage"
        android:layout_alignStart="@+id/imageViewUserImage"
        android:layout_alignTop="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextFname"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:text="@string/user_last_name" />

    <EditText
        android:id="@+id/editTextLname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextFname"
        android:layout_alignStart="@+id/editTextFname"
        android:layout_alignTop="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textView2"
        android:layout_marginBottom="36dp"
        android:layout_toLeftOf="@+id/editTextFname"
        android:layout_toStartOf="@+id/editTextFname"
        android:gravity="center"
        android:text="@string/user_username" />

    <Button
        android:id="@+id/buttonSaveChanges"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextLname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="@string/user_info_save_changes"
        android:textColor="@color/colorAccent" />

</RelativeLayout>
